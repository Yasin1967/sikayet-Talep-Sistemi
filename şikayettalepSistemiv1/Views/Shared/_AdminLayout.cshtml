<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* Admine özel koyu tema ayarları */
        .admin-navbar {
            background-color: #212529 !important; /* Simsiyah Arka Plan */
        }

        .admin-brand {
            font-weight: bold;
            color: #ffc107 !important; /* Sarı logo */
            letter-spacing: 1px;
        }

        .nav-link {
            color: #e0e0e0 !important;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        body {
            background-color: #f4f6f9; /* Hafif gri arka plan, göz yormaz */
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark admin-navbar shadow-sm mb-4">
        <div class="container-fluid">
            <a class="navbar-brand admin-brand" href="/Bildirim/Index">
                <i class="fas fa-shield-alt"></i> YÖNETİM PANELİ
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Bildirim/Index">
                            <i class="fas fa-list"></i> İş Listesi
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-users"></i> Personel
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-chart-pie"></i> Raporlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-info" href="/" target="_blank">
                            <i class="fas fa-globe"></i> Siteyi Gör
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <span class="text-white me-3 small">Hoşgeldin, <strong>admin</strong></span>
                    <a href="/Login/CikisYap" class="btn btn-sm btn-danger">
                        <i class="fas fa-sign-out-alt"></i> Çıkış
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 py-3 text-muted border-top">
        <small>&copy; 2025 Kurumsal Yönetim Sistemi v1.0</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>